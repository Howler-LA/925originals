{% liquid
  assign images = null
  assign collection_type = null
  
  # Determine collection type with more flexible matching
  if collection.handle contains '-men' or collection.handle contains 'mens' or collection.handle == 'men'
    assign collection_type = 'mens'
  elsif collection.handle contains '-women' or collection.handle contains 'womens' or collection.handle == 'women'
    assign collection_type = 'womens'
  elsif collection.handle contains 'unisex'
    assign collection_type = 'unisex'
  endif
  
  # Get images based on collection type
  case collection_type
    when 'mens'
      if product.metafields.media.mens.value != blank
        assign images = product.metafields.media.mens.value
      endif
    when 'womens'
      if product.metafields.media.womens.value != blank
        assign images = product.metafields.media.womens.value
      endif
    when 'unisex'
      if product.metafields.media.unisex.value != blank
        assign images = product.metafields.media.unisex.value
      endif
  endcase
%}

<div x-data="{
        imageGalleryOpened: false,
        imageGalleryActiveUrl: null,
        imageGalleryImageIndex: null,
        imageGallery: [
          {% if images %}
            {% for image in images %}
              {
                  'photo': '{{ image | image_url: width: 900 }}',
                  'alt': '{{ image.alt | escape }}'
              },
            {% endfor %}
          {% endif %}
          {% for image in product.images %}
            {
                'photo': '{{ image | image_url: width: 900 }}',
                'alt': '{{ image.alt | escape }}'
            }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ],
        imageGalleryOpen(event) {
            this.imageGalleryImageIndex = event.target.dataset.index;
            this.imageGalleryActiveUrl = event.target.src;
            this.imageGalleryOpened = true;
        },
        imageGalleryClose() {
            this.imageGalleryOpened = false;
            setTimeout(() => this.imageGalleryActiveUrl = null, 300);
        },
        imageGalleryNext(){
            this.imageGalleryImageIndex = (this.imageGalleryImageIndex == this.imageGallery.length) ? 1 : (parseInt(this.imageGalleryImageIndex) + 1);
            this.imageGalleryActiveUrl = this.$refs.gallery.querySelector('[data-index=\'' + this.imageGalleryImageIndex + '\']').src;
        },
        imageGalleryPrev() {
            this.imageGalleryImageIndex = (this.imageGalleryImageIndex == 1) ? this.imageGallery.length : (parseInt(this.imageGalleryImageIndex) - 1);
            this.imageGalleryActiveUrl = this.$refs.gallery.querySelector('[data-index=\'' + this.imageGalleryImageIndex + '\']').src;
            
        }
    }" 
    @image-gallery-next.window="imageGalleryNext()" 
    @image-gallery-prev.window="imageGalleryPrev()" 
    @keyup.right.window="imageGalleryNext();" 
    @keyup.left.window="imageGalleryPrev();"
    {% if images %}data-has-custom-images="true"{% endif %}
    class="w-full h-full select-none">
    <div 
      class="select-none ease animate-fade-in-view" 
      style="translate: none; rotate: none; scale: none; opacity: 1; transform: translate(0px, 0px);"
    >
      <ul 
        x-ref="gallery" 
        id="gallery" 
        class="gap-5 md:gap-10 lg:gap-20 snap-x md:snap-none flex flex-row lg:flex-col overflow-x-auto"
      >
        <template x-for="(image, index) in imageGallery">
          <li class="shrink-0 snap-center w-3/4 lg:w-full">
            <img 
              x-on:click="imageGalleryOpen" 
              :src="image.photo" 
              :alt="image.alt" 
              :data-index="index+1" 
              width="900"
              height="900"
              class="w-full h-full block object-contain cursor-pointer hover:opacity-90 transition-opacity ease duration-300"
            >
          </li>
        </template>
      </ul>
    </div>
    <template x-teleport="body">
      <div 
        x-show="imageGalleryOpened" 
        x-transition:enter="transition ease-in-out duration-300" 
        x-transition:enter-start="opacity-0" 
        x-transition:leave="transition ease-in-in duration-300" 
        x-transition:leave-end="opacity-0" 
        @click="imageGalleryClose" 
        @keydown.window.escape="imageGalleryClose" 
        x-trap.inert.noscroll="imageGalleryOpened"
        class="fixed inset-0 z-[99] flex items-center justify-center bg-white bg-opacity-90 select-none cursor-zoom-out" x-cloak>
        <div class="relative flex items-center justify-center w-11/12 xl:w-4/5 h-11/12"> 
          <div @click="$event.stopPropagation(); $dispatch('image-gallery-prev')" class="absolute left-0 flex items-center justify-center text-stone-800 translate-x-10 rounded-full cursor-pointer xl:-translate-x-24 2xl:-translate-x-32 bg-white/10 w-14 h-14 hover:bg-white/20">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" /></svg>
          </div>
          <img 
              x-show="imageGalleryOpened" 
              x-transition:enter="transition ease-in-out duration-300" 
              x-transition:enter-start="opacity-0 transform scale-95" 
              x-transition:leave="transition ease-in-in duration-300" 
              x-transition:leave-end="opacity-0 transform scale-95" 
              class="object-contain object-center w-full h-full select-none cursor-zoom-out" 
              :src="imageGalleryActiveUrl" 
              alt="" 
              width="1200"
              height="1200"
              style="display: none;"
            >
            <div @click="$event.stopPropagation(); $dispatch('image-gallery-next');" class="absolute right-0 flex items-center justify-center text-stone-800 -translate-x-10 rounded-full cursor-pointer xl:translate-x-24 2xl:translate-x-32 bg-white/10 w-14 h-14 hover:bg-white/20">
              <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" /></svg>
            </div>
          </div>
        </div>
    </template>
</div>