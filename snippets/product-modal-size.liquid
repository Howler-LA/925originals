<div x-data="{ open: false }" class="flex justify-start">
    <!-- Trigger -->

    {% unless fit_image %}

    <span x-on:click="open = true">
        <button type="button" class="relative flex items-center justify-center gap-2 whitespace-nowrap rounded-lg border border-gray-200 bg-white px-4 py-2 text-gray-800 shadow-sm hover:border-gray-200 hover:bg-gray-50">
            Open modal bro
        </button>
    </span>

    {% else %}

    <button x-on:click="open = true" class="w-1/3 border rounded-lg p-2">
      <span class="sr-only">Open product fitment table</span>
      <img
        width="{{ fit_image.width }}"
        height="{{ fit_image.height }}"
        src="{{ fit_image | image_url: width: 800 }}"
        srcset="{{fit_image | image_url: width: 600 }} 1x, {{ fit_image | image_url: width: 800 }} 2x"
        alt="{{ fit_image.alt }}"
        class="w-full h-auto"
        loading="lazy"
      >
    </button>

    {% endunless %}

    <!-- Modal -->
    <div
        x-show="open"
        style="display: none"
        x-on:keydown.escape.prevent.stop="open = false"
        role="dialog"
        aria-modal="true"
        x-id="['modal-title']"
        :aria-labelledby="$id('modal-title')"
        class="fixed inset-0 z-50 overflow-y-auto"
    >
        <!-- Overlay -->
        <div x-show="open" x-transition.opacity class="fixed inset-0 bg-black/25"></div>

        <!-- Panel -->
        <div
            x-show="open" x-transition
            x-on:click="open = false"
            class="relative flex min-h-screen items-center justify-center p-4"
        >
            <div
                x-on:click.stop
                x-trap.noscroll.inert="open"
                class="relative min-w-96 max-w-screen-md rounded-xl bg-white p-6 shadow-lg"
            >
                <img
                  width="{{ fit_image.width }}"
                  height="{{ fit_image.height }}"
                  src="{{ fit_image | image_url: width: 1200 }}"
                  srcset="{{fit_image | image_url: width: 600 }} 1x, {{ fit_image | image_url: width: 1200 }} 2x"
                  alt="{{ fit_image.alt }}"
                  class="w-full h-auto"
                  loading="lazy"
                >

                <!-- Buttons -->
                <div class="mt-6 flex justify-end space-x-2">
                    <button type="button" x-on:click="open = false" class="relative flex items-center justify-center gap-2 whitespace-nowrap rounded-lg border border-transparent bg-gray-800 px-4 py-2 text-white hover:bg-gray-900">
                        Close Window
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>