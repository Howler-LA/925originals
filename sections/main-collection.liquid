{% schema %}
{
  "name": "Main Collection Section",
  "class": "section-main-collection pb-5 lg:pb-10",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_filters",
      "label": "Show collection filters",
      "default": true
    },
    {
      "type": "range",
      "id": "products_per_page",
      "label": "Products per page",
      "min": 12,
      "max": 48,
      "step": 12,
      "default": 24
    }
  ]
}
{% endschema %}

{% if section.settings.show_filters %}
  {% render 'collection-filters-alpine' %}
{% endif %}

<div 
  id="ProductGridContainer"
  x-data="infiniteScroll"
  data-collection-handle="{{ collection.handle }}"
  data-section-id="{{ section.id }}"
  data-products-per-page="{{ section.settings.products_per_page | default: 24 }}"
>
  <div
    class="container grid grid-flow-row grid-cols-1 gap-5 lg:gap-20 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-4"
    id="product-grid"
    data-product-grid
    data-id="{{ section.id }}"
  >
    {%- liquid
      assign products_per_page = section.settings.products_per_page | default: 24
    -%}
      
    {% paginate collection.products by products_per_page %}
        {% for product in collection.products %}
          {% assign lazy_load = false %}
          {% if forloop.index > 2 %}
            {% assign lazy_load = true %}
          {% endif %}
          {% assign video = false %}
          {% for media in product.media %}
            {% if media.media_type == 'video' %}
              {% assign video = true %}
              {% break %}
            {% endif %}
          {% endfor %}
          {% if video == true %}
            {% render 'card-product-double', card_product: product, lazy_load: lazy_load %}
          {% else %}
            {% render 'card-product-single', card_product: product, lazy_load: lazy_load %}
          {% endif %}
        {% else %}
          {% if collection.handle == 'all' and collection.all_vendors.size == 0 and collection.all_types.size == 0 %}
            {% for i in (1..4) %}
              {% render 'card-product-double' %}
            {% endfor %}
          {% endif %}
        {% endfor %}
      
      {% comment %} Hidden pagination info for infinite scroll component {% endcomment %}
      <div 
        data-pagination-info 
        data-total-pages="{{ paginate.pages }}" 
        class="hidden"
      ></div>
      
      {% comment %} Loading indicator {% endcomment %}
      <div 
        x-show="loading" 
        x-cloak
        class="col-span-full mt-8 text-center order-last"
      >
        <div class="inline-block">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-gray-900"></div>
          <p class="mt-2 text-sm text-gray-600">Loading more products...</p>
        </div>
      </div>
      
      {% comment %} End of results message {% endcomment %}
      <div 
        x-show="!hasMore && !loading && currentPage > 1" 
        x-cloak
        class="col-span-full mt-8 text-center order-last"
      >
        <p class="text-sm text-gray-600">You've reached the end of the collection</p>
      </div>
    {% endpaginate %}
  </div>
</div>
