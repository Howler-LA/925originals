  <div class="container grid lg:grid-cols-4 gap-10 lg:gap-x-20 lg:gap-y-10">
    
    <div class="text-subtle">
      <div class="flex flex-col gap-2 h-10 justify-center">
        {% render 'component-title' html:'span' title:shop.name | escape %}
      </div>
    </div>
    
    <div class="grid">
      <nav class="flex flex-row gap-2 leading-10">
        <div class="flex flex-col gap-2 leading-10">Â© {{ shop.name }} 2025</div>
