<div
  class="minicart"
  data-ajax-cart-section
  x-cloak>

  <div class="flex items-center justify-between h-10 mb-10">
    <h2 id="minicart-label">Your Bag</h2>
    <button
      @click="$store.global.isMinicartVisible = false"
      aria-label="Close cart"
      class="min-w-[44px] min-h-[44px] flex items-center justify-center -mr-2"
    >
      {% render 'icon-close-x' %}
    </button>
  </div>

  <div class="item-count-message sr-only" aria-live="polite" aria-atomic="true">
    You have
    <span
      class="count"
      style="font-weight: 600"
      x-data>{{ cart.item_count }}
    </span>
    <span x-data></span>
    in your cart!
  </div>

  <ul data-ajax-cart-section-scroll class="flex flex-col gap-10" aria-labelledby="minicart-label">
    {% if cart.items.size > 0 %}
      {% for line_item in cart.items %}
        <li class="item grid grid-cols-3 gap-6">
          <div class="product-thumb-wrapper bg-stone-100 p-4">
            <img 
              class="mix-blend-multiply"
              src="{{ line_item.image | image_url: width: 100, height: 120, crop: 'center' }}" 
              alt="{{ line_item.title }}" 
              srcset="{{ line_item.image | image_url: width: 100, height: 120, crop: 'center' }} 1x, {{ line_item.image | image_url: width: 200, height: 240, crop: 'center' }} 2x"
              width="{{ line_item.image.width }}"
              height="{{ line_item.image.height }}"
              loading="lazy"
            >
          </div>
          <div class="item-details col-span-2 flex flex-col gap-2">
            <h4 class="font-medium text-sm/5">{{ line_item.product.title }}</h4>
            <div class="">
              <div class="options">
                {% for option in line_item.options_with_values %}
                  <p class="option text-sm" data-option-name="{{ option.name }}">
                    <span class="font-medium">{{ option.name }}:</span>
                    <span class="text-stone-600">{{ option.value }}</span>
                  </p>
                {% endfor %}
              </div>
              <div class="quantity-row text-sm flex items-center gap-2">
                <span class="font-medium">Quantity:</span>
                <ajax-cart-quantity class="flex items-center gap-1">
                  <a
                    href="{{ routes.cart_change_url }}?id={{ line_item.key }}&quantity={{ line_item.quantity | minus: 1 }}"
                    data-ajax-cart-request-button
                    aria-label="Decrease quantity for {{ line_item.product.title }}"
                    class="min-size-[32px] flex items-center justify-center hover:bg-stone-100 rounded transition"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-4"
                      aria-hidden="true">
                      <path
                        fill-rule="evenodd"
                        d="M5.25 12a.75.75 0 01.75-.75h12a.75.75 0 010 1.5H6a.75.75 0 01-.75-.75z"
                        clip-rule="evenodd" />
                    </svg>
                  </a>
                  <input
                    type="number"
                    value="{{ line_item.quantity }}"
                    name="updates[]"
                    data-ajax-cart-quantity-input="{{ line_item.key }}"
                    class="w-8 text-center tabular-nums text-sm border-0 bg-transparent"
                    aria-label="Quantity for {{ line_item.product.title }}"
                    readonly>
                  <a
                    href="{{ routes.cart_change_url }}?id={{ line_item.key }}&quantity={{ line_item.quantity | plus: 1 }}"
                    data-ajax-cart-request-button
                    aria-label="Increase quantity for {{ line_item.product.title }}"
                    class="min-size-[32px] flex items-center justify-center hover:bg-stone-100 rounded transition"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-4"
                      aria-hidden="true">
                      <path
                        fill-rule="evenodd"
                        d="M12 5.25a.75.75 0 01.75.75v5.25H18a.75.75 0 010 1.5h-5.25V18a.75.75 0 01-1.5 0v-5.25H6a.75.75 0 010-1.5h5.25V6a.75.75 0 01.75-.75z"
                        clip-rule="evenodd" />
                    </svg>
                  </a>
                </ajax-cart-quantity>
              </div>
              <div class="price-row text-sm">
                <span class="font-medium">Price:</span>
                <span class="text-stone-600 tabular-nums">{{ line_item.price | money }}</span>
              </div>
            </div>
            <p class="remove text-sm">
              <a class="underline underline-offset-4" href="{{ line_item.url_to_remove }}" data-ajax-cart-request-button>
                Remove
              </a>
            </p>
          </div>
        </li>
      {% endfor %}
    {% else %}
      <li class="text-center text-stone-500 py-8">
        Nothing here
      </li>
    {% endif %}
  </ul>

  {% if cart.items.size > 0 %}
    <div class="subtotal mt-10 px-10 py-6 -mx-10 border-t border-stone-100 flex justify-between items-center">
      <p class="title">Subtotal</p>
      <p class="amount">{{ cart.items_subtotal_price | money }}</p>
    </div>
    
    <a 
      data-theme="dark"
      class="view-cart-details-link h-16 rounded-xl bg-stone-800 hover:bg-stone-900 text-stone-100 flex items-center justify-center" 
      href="{{ routes.cart_url }}"
    >
      Checkout
    </a>
  {% endif %}

</div>

<style>
  /* Animation classes */
  .transition {
    transition-property: all;
  }

  .duration-300 {
    transition-duration: 300ms;
  }

  .ease-out {
    transition-timing-function: ease-out;
  }

  .ease-in {
    transition-timing-function: ease-in;
  }

  .off-screen-right {
    right: -100px;
    transform: translateX(120%);
  }

  .right-50 {
    right: 50px;
    transform: translateX(0%);
  }

  @media(max-width: 576px) {
    .right-50 {
      right: 20px;
      transform: translateX(0%);
    }
  }

  /* Main styles */
  .minicart-wrapper {
    position: fixed;
    top: 30px;
    right: 40px;
    z-index: 100;
  }

  @media(max-width: 576px) {
    .minicart-wrapper {
      right: 20px;
    }
  }

  .minicart {
    width: 472px;
    height: auto;
    padding: 40px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 30px 130px -8px rgba(0, 0, 0, 0.25);
  }

  /* Remove default number input spinners */
  .minicart input[type="number"]::-webkit-outer-spin-button,
  .minicart input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .minicart input[type="number"] {
    -moz-appearance: textfield;
  }

  @media(max-width: 576px) {
    .minicart {
      width: calc(100vw - 32px);
      max-width: 400px;
      padding: 24px;
    }
    
    .minicart-wrapper {
      left: 16px;
      right: 16px;
      width: calc(100vw - 32px);
      max-width: 400px;
    }
  }

</style>